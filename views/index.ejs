    <script>
    $( document ).ready(function() {
      var data = {};
      data.store = 'flipkart';
      getProducts(data);

      $('.store-menu').click(function(){
          $('.store-menu').removeClass('active');
          $(this).addClass('active');
          data.store = $(this).attr('data-store');;
          getProducts(data);
      });

      function getProducts(data){
        $.ajax({
          url : "/store/search",
          type : "POST",
          data : data,
          success : function(data) {
            console.log(data);
            if (data.flag) {
              var response = data.data.dotdList;
              var html='';
              for (var i = 0; i< response.length; i++) {
                  html += '<div class="col-lg-4 col-md-6 mb-4"><div class="card h-100 product-img"><a target="_blank" href='+response[i].url+'><img class="card-img-top" src='+response[i].imageUrls[3].url+' alt=""></a>';
                  html += '<div class="card-body"><h4 class="card-title"><a target="_blank" href='+response[i].url+'>'+response[i].name+'</a></h4>';
                  html +=  '<h5>'+response[i].title+'</h5><p class="card-text">'+(response[i].description=='null' ? '' : response[i].description )+'</p></div></div></div>'
                }
                console.log(html);
                $('.produc-list-container').html(html);
            } else {
              alert("SOmething has went wrong / store not implemented");
            }
          },
          error : function() {
            alert("Something went wrong");
          }
        });
      }
    });
    </script>
